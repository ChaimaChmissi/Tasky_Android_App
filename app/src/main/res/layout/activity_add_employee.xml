<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEmployeeActivity"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/addEmployeeHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="Add New Employee"
        android:textSize="24sp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/addEmployeeHead"
        android:layout_marginEnd="6dp"/>

    <EditText
        android:id="@+id/NameText"
        android:layout_width="378dp"
        android:layout_height="60dp"
        android:layout_below="@id/addEmployeeHead"
        android:layout_marginTop="52dp"
        android:background="@drawable/lavender_border"
        android:fontFamily="@font/poppins"
        android:hint="Name"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/MailText"
        android:hint="Adress Email"
        android:layout_below="@id/NameText"
        android:background="@drawable/lavender_border"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:fontFamily="@font/poppins"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/PasswText"
        android:hint="Password"
        android:layout_below="@id/MailText"
        android:background="@drawable/lavender_border"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:fontFamily="@font/poppins"
        app:passwordToggleEnabled="true"
        />


